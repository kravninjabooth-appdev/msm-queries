<h1> Actor #<%=@the_actor.id%> details</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>


&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id%>" class ="btn btn-block btn-outline-secondary">
  Delete actor
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <img src="http://robohash.org/<%= @the_actor.image%>?set=set7">


  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<h2>Filmography</h2>

<table border ="1">
<%@filmography.each do |a_film|%>
  <tr>
    <td>
      <%= a_film.title%>
    </td>
    <td>
      <%= a_film.year%>
    </td>
    <td>
      <% d = Director.where({ :id => a_film.director_id}).at(0) %>
      <%= d.name %>
    </td>

    <td>
      <%=@character.name%>
    </td>
    <td>
      <a href="/movies/<%= a_film.id %>">
      Show details
      </a>
    </td>
  </tr>
<%end%>
</table>
